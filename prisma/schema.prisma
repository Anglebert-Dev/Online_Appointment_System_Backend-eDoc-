generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  phone     String
  password  String
  role      String   @default("patient")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Doctor {
  id          String   @id @default(uuid())
  username    String
  email       String   @unique
  phone       String
  specialties String
  password    String
  role        String   @default("doctor")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Session {
  id            String   @id @unique @default(uuid())
  title         String
  doctor        String
  patients      String
  date          String
  schedule_time String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Appointment {
  id                 String   @id @unique @default(uuid())
  patient_id         String
  appointment_number String
  schedule_id        String
  appointment_date   String
  schedule_time      String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
